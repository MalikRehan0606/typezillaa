rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // SITE STATS (TOTAL VISITS)
    match /meta/site_stats {
      allow read: if true;
      allow write: if true;  // anyone can increment
    }

    // DAILY VIEWS
    match /meta/{docId} {
      allow read: if true;
      allow write: if docId.startsWith("day_");  // allow writing daily counters
    }

    // USERS (normal rules)
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /leaderboard/{docId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    match /passwordResetAttempts/{email} {
      allow read, write: if true;
    }

    match /matches/{matchId} {
      allow read: if true;
      allow create: if request.auth != null &&
                     request.resource.data.player1Id == request.auth.uid &&
                     request.resource.data.status == 'pending';
      allow update: if request.auth != null;
    }

    match /friendRequests/{requestId} {
      allow read: if request.auth != null &&
        (resource.data.toUserId == request.auth.uid ||
         resource.data.fromUserId == request.auth.uid);

      allow create: if request.auth != null &&
         request.resource.data.fromUserId == request.auth.uid;

      allow update: if request.auth != null &&
         resource.data.toUserId == request.auth.uid;

      allow delete: if false;
    }

    match /reports/{reportId} {
      allow create: if request.auth != null &&
                     request.resource.data.reporterId == request.auth.uid;
      allow read, update, delete: if false;
    }
  }
}
